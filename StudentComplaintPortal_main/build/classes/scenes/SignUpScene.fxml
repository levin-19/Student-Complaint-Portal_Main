<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="15.0" style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignUpController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  
  <children>
    <VBox alignment="CENTER" spacing="12.0" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3); -fx-padding: 20;">
      <children>
        <!-- Header Section -->
        <Label text="🎯 Join Us Today" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: linear-gradient(to right, #667eea, #764ba2);">
          <font>
            <Font name="System Bold" size="22.0"/>
          </font>
        </Label>
        
        <Label text="Create your student account in just a few steps" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;"/>

        <!-- Profile Picture Section -->
        <Label text="📸 Profile Picture" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        
        <HBox alignment="CENTER" spacing="10.0">
          <ImageView fx:id="profileImageView" fitHeight="90.0" fitWidth="90.0" style="-fx-background-radius: 45; -fx-border-radius: 45; -fx-border-color: #ecf0f1; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 5, 0, 0, 1);"/>
        </HBox>
        
        <Button onAction="#handleUploadPicture" text="📸 Upload Picture" style="-fx-background-color: linear-gradient(to bottom, #9b59b6, #8e44ad); -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 18; -fx-padding: 8 15; -fx-pref-width: 180;"/>

        <!-- Form Fields -->
        <Label text="📝 Account Information" style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        
        <TextField fx:id="nameField" promptText="👤 Full Name" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12; -fx-pref-width: 300;"/>
        <TextField fx:id="studentIdField" promptText="🆔 Student ID" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12; -fx-pref-width: 300;"/>
        <TextField fx:id="departmentField" promptText="🏫 Department" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12; -fx-pref-width: 300;"/>
        <TextField fx:id="mobileField" promptText="📱 Mobile Number" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12; -fx-pref-width: 300;"/>
        <TextField fx:id="emailField" promptText="📧 Email Address" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12; -fx-pref-width: 300;"/>
        <PasswordField fx:id="passwordField" promptText="🔒 Password" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12; -fx-pref-width: 300;"/>
        <PasswordField fx:id="confirmPasswordField" promptText="🔐 Confirm Password" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 12; -fx-pref-width: 300;"/>

        <!-- Action Buttons -->
        <Button fx:id="registerButton" onAction="#handleRegister" text="🎉 Create Account" style="-fx-background-color: linear-gradient(to bottom, #27ae60, #229954); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 18; -fx-padding: 8 20; -fx-pref-width: 220;"/>
        
        <Button fx:id="backButton" onAction="#handleBack" text="⬅️ Back to Login" style="-fx-background-color: linear-gradient(to bottom, #95a5a6, #7f8c8d); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-background-radius: 18; -fx-padding: 8 20; -fx-pref-width: 220;"/>
      </children>
    </VBox>
  </children>
</VBox>
