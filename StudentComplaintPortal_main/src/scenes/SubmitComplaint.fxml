<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="1000.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SubmitComplaintController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 20, 0, 0, 5); -fx-padding: 30;">
         <children>
            <Label text="📝 Submit Your Complaint" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Help us improve by sharing your concerns" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="titleField" promptText="📋 Complaint Title" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 12 15 12 15; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);" />
            <ComboBox fx:id="categoryComboBox" prefWidth="300.0" promptText="🏷️ Select Category" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 8 15 8 15; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);" />
            <TextArea fx:id="descriptionArea" prefHeight="120.0" promptText="📄 Describe your complaint in detail..." wrapText="true" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-width: 2; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 12 15 12 15; -fx-font-size: 14px; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 3, 0, 0, 1);" />
            <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmit" prefWidth="250.0" text="🚀 Submit Complaint" style="-fx-background-color: linear-gradient(to bottom, #27ae60, #229954); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 5, 0, 0, 2); -fx-padding: 12 25 12 25;" />
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefWidth="250.0" text="⬅️ Back to Dashboard" style="-fx-background-color: linear-gradient(to bottom, #95a5a6, #7f8c8d); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 5, 0, 0, 2); -fx-padding: 12 25 12 25;" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</VBox>
