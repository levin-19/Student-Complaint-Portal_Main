<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="15.0" 
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" 
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controllers.SignUpController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <children>
    <VBox alignment="CENTER" spacing="12.0" style="-fx-background-color: rgba(255, 255, 255, 0.95);                  -fx-background-radius: 15;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);                  -fx-padding: 20;">
      <children>

        <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: linear-gradient(to right, #667eea, #764ba2);" text="🎯 Join Us Today">
          <font>
            <Font name="System Bold" size="22.0" />
          </font>
        </Label>

        <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" text="Create your student account in just a few steps" />

        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 14px; -fx-font-weight: bold;" text="📝 Account Information" />

        <TextField fx:id="nameField" promptText="👤 Full Name" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12;                           -fx-padding: 8 12; -fx-pref-width: 300;" />
        <TextField fx:id="studentIdField" promptText="🆔 Student ID" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12;                           -fx-padding: 8 12; -fx-pref-width: 300;" />
        <TextField fx:id="departmentField" promptText="🏫 Department" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12;                           -fx-padding: 8 12; -fx-pref-width: 300;" />
        <TextField fx:id="mobileField" promptText="📱 Mobile Number" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12;                           -fx-padding: 8 12; -fx-pref-width: 300;" />
        <TextField fx:id="emailField" promptText="📧 Email Address" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12;                           -fx-padding: 8 12; -fx-pref-width: 300;" />
        <PasswordField fx:id="passwordField" promptText="🔒 Password" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12;                               -fx-padding: 8 12; -fx-pref-width: 300;" />
        <PasswordField fx:id="confirmPasswordField" promptText="🔐 Confirm Password" style="-fx-font-size: 12px; -fx-background-radius: 12; -fx-border-radius: 12;                               -fx-padding: 8 12; -fx-pref-width: 300;" />

        <Button fx:id="registerButton" onAction="#handleRegister" style="-fx-background-color: linear-gradient(to bottom, #27ae60, #229954);                        -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;                        -fx-background-radius: 18; -fx-padding: 8 20; -fx-pref-width: 220;" text="🎉 Create Account" />

        <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: linear-gradient(to bottom, #95a5a6, #7f8c8d);                        -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;                        -fx-background-radius: 18; -fx-padding: 8 20; -fx-pref-width: 220;" text="⬅️ Back to Login" />
      </children>
    </VBox>
  </children>
</VBox>
